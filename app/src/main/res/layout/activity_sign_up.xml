<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cccccc"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".SignUpActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:textColor="#D32F2F"
        android:textSize="60sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/textbox_style"
        android:backgroundTint="#FFFDFD"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textColor="#090909"
        android:textColorHint="#090909" />

    <EditText
        android:id="@+id/emailbox"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/textbox_style"
        android:backgroundTint="#FFFDFD"
        android:hint="@string/hintmail"
        android:inputType="textEmailAddress"
        android:textColor="#090909"
        android:textColorHint="#090909" />

    <EditText
        android:id="@+id/passwordbox"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/textbox_style"
        android:backgroundTint="#FFFDFD"
        android:hint="@string/hintpass"
        android:inputType="textPassword"
        android:textColor="#090909"
        android:textColorHint="#090909" />

    <Button
        android:id="@+id/createBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/textbox_style"
        android:drawableRight="@drawable/ic_baseline_person_add_24"
        android:text="SIGN UP"
        android:textColor="#F8F7F7"
        android:textSize="18sp" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/textbox_style"
        android:drawableRight="@drawable/ic_baseline_account_circle_24"
        android:text="Already have an account"
        android:textColor="#F8F7F7"
        android:textSize="15sp" />
</LinearLayout>